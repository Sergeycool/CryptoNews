<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/thickness_all_button_border" android:color="@color/yellow" />
            <corners android:radius="@dimen/radius_all_button_corner" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="@dimen/thickness_all_button_border" android:color="@color/yellow" />
            <corners android:radius="@dimen/radius_all_button_corner" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="@dimen/thickness_all_button_border" android:color="@color/gray" />
            <corners android:radius="@dimen/radius_all_button_corner" />
        </shape>
    </item>
</selector>