<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.HomeActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"/>

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        app:bb_activeTabAlpha="1"
        app:bb_activeTabColor="@android:color/holo_orange_light"
        app:bb_inActiveTabAlpha="0.5"
        app:bb_inActiveTabColor="@android:color/holo_orange_light"
        app:bb_tabXmlResource="@xml/bottom_nav_menu"/>
</RelativeLayout>